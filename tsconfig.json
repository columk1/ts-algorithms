{
  "extends": "@tsconfig/node21/tsconfig.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "test/*": ["tests/*"],
      "~/*": ["src/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src", "tests"]
}
